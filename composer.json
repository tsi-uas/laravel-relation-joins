{
    "name": "halo/laravel-relation-joins",
    "description": "Adds the ability to join on a relationship by name.",
    "keywords": ["laravel", "relation", "join", "eloquent", "query"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "illuminate/database": "^6.20.12|^7.30.4|^8.22.1",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "illuminate/container": "^6.0|^7.0|^8.0",
        "mockery/mockery": "^1.4.3",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpunit": "^8.5|^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Halo\\LaravelRelationJoins\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Halo\\LaravelRelationJoins\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Halo\\LaravelRelationJoins\\LaravelRelationJoinServiceProvider"
            ]
        }
    }
}
